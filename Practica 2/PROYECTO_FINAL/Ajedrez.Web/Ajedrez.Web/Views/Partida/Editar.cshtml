@model Ajedrez.Web.Models.PartidaVM

@{
    ViewData["Title"] = "Editar Partida";
}

<h2>Editar Partida</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="JugadorBlancasId"></label>
        <input asp-for="JugadorBlancasId" class="form-control" />
        <span asp-validation-for="JugadorBlancasId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="JugadorNegrasId"></label>
        <input asp-for="JugadorNegrasId" class="form-control" />
        <span asp-validation-for="JugadorNegrasId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TorneoId"></label>
        <input asp-for="TorneoId" class="form-control" />
        <span asp-validation-for="TorneoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Resultado"></label>
        <select asp-for="Resultado" class="form-control">
            <option value="1">Ganan Blancas</option>
            <option value="2">Ganan Negras</option>
            <option value="0">Tablas</option>
        </select>
        <span asp-validation-for="Resultado" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}